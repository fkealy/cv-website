---
const experiences = [
  {
    period: '2024 - Present',
    company: 'Yotpoint',
    role: 'Co-Founder & Sole Developer',
    description: 'Building and maintaining a marketplace platform for superyacht services using Next.js, Vercel, and Tailwind CSS. Responsible for full-stack development using Node.js, AWS Lambda, API Gateway, DynamoDB, and SES.',
    current: true,
    color: 'from-blue-300 to-cyan-300'
  },
  {
    period: 'Jun 2023 - 2024',
    company: 'Career Break',
    role: 'Traveler & Learner',
    description: 'Spent 18 months experiencing different cultures, hiking, and learning Spanish. Completed MBA Essentials at LSE and Product Building Course at Barclays Eagle Labs. Returned refreshed and ready to build. Â¡Vamos!',
    current: false,
    color: 'from-purple-300 to-pink-300'
  },
  {
    period: '2020 - 2023',
    company: 'Glofox',
    role: 'Product Engineer',
    description: 'Developed the Memberships vertical deploying with CircleCI for CI/CD to AWS infrastructure running a Spring/Java backend and React/Redux frontend. Updated legacy service to CQRS event-driven pattern.',
    current: false,
    color: 'from-green-300 to-emerald-300'
  },
  {
    period: '2018 - 2020',
    company: 'CGI',
    role: 'Technical Consultant',
    description: 'Modernized code for critical government infrastructure. Completed Scrum Master Certified and AWS Developer Associate certifications.',
    current: false,
    color: 'from-orange-300 to-yellow-300'
  }
];

const education = [
  {
    year: '2024',
    title: 'MBA Essentials',
    institution: 'London School of Economics (LSE)'
  },
  {
    year: '2024',
    title: 'Product Building Course',
    institution: 'Barclays Eagle Labs'
  },
  {
    year: '2012 - 2015',
    title: 'Computer Science and Mathematics BSc 2:1',
    institution: 'Royal Holloway, University of London'
  }
];

const currentSkills = ['Next.js', 'React', 'Node.js', 'Tailwind CSS', 'AWS Lambda', 'DynamoDB', 'Vercel'];
const otherSkills = ['Java/Spring', 'Flutter/Dart', 'Redux', 'Docker', 'Kubernetes', 'CircleCI', 'GCP'];
---

<section class="py-20 px-4 bg-gradient-to-br from-amber-50 to-orange-50">
  <div class="max-w-6xl mx-auto">
    <!-- Experience Section -->
    <div class="mb-20">
      <div class="inline-block bg-yellow-300 border-4 border-black px-6 py-3 -rotate-2 bold-shadow-lg mb-12">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 uppercase">Experience</h2>
      </div>

      <div class="space-y-6">
        {experiences.map((exp, index) => (
          <article class={`bg-gradient-to-r ${exp.color} border-4 border-black p-6 bold-shadow ${index % 2 === 0 ? 'rotate-1' : '-rotate-1'}`}>
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4 mb-4">
              <div>
                <h3 class="text-2xl md:text-3xl font-bold text-gray-900 uppercase mb-1">{exp.company}</h3>
                <p class="text-lg font-bold text-gray-900">{exp.role}</p>
              </div>
              <div class="bg-black border-2 border-black px-4 py-2 font-bold text-white text-sm uppercase tracking-wide whitespace-nowrap">
                {exp.period}
              </div>
            </div>
            <div class="bg-white border-3 border-black p-4 bold-shadow-sm">
              <p class="font-semibold text-gray-800">{exp.description}</p>
            </div>
          </article>
        ))}
      </div>
    </div>

    <!-- Education & Skills -->
    <div class="grid md:grid-cols-2 gap-12">
      <div>
        <div class="inline-block bg-yellow-300 border-4 border-black px-6 py-3 rotate-2 bold-shadow-lg mb-8">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 uppercase">Education</h2>
        </div>

        <div class="space-y-4">
          {education.map((edu) => (
            <article class="bg-gradient-to-r from-white to-gray-50 border-4 border-black p-6 bold-shadow">
              <p class="text-sm font-bold text-gray-900 uppercase tracking-widest mb-2">{edu.year}</p>
              <h3 class="text-xl font-bold text-gray-900 mb-2 uppercase">{edu.title}</h3>
              <p class="font-semibold text-gray-700">{edu.institution}</p>
            </article>
          ))}
        </div>
      </div>

      <div>
        <div class="inline-block bg-yellow-300 border-4 border-black px-6 py-3 -rotate-2 bold-shadow-lg mb-8">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 uppercase">Tech Stack</h2>
        </div>

        <div class="space-y-6">
          <div class="bg-gradient-to-r from-orange-400 to-pink-500 border-4 border-black p-6 bold-shadow">
            <h3 class="font-bold text-white mb-4 uppercase text-lg tracking-wide">Current Focus</h3>
            <div class="flex flex-wrap gap-2">
              {currentSkills.map((skill) => (
                <span class="px-3 py-2 bg-white border-2 border-black text-gray-900 font-bold text-sm uppercase">
                  {skill}
                </span>
              ))}
            </div>
          </div>

          <div class="bg-white border-4 border-black p-6 bold-shadow">
            <h3 class="font-bold text-gray-900 mb-4 uppercase text-lg tracking-wide">Also Experienced With</h3>
            <div class="flex flex-wrap gap-2">
              {otherSkills.map((skill) => (
                <span class="px-3 py-2 bg-gray-100 border-2 border-black text-gray-900 font-bold text-sm uppercase">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
