---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Nav from '../../components/Nav.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <Nav />
  <main class="pt-32 pb-20 px-4 min-h-screen bg-amber-50">
    <article class="max-w-4xl mx-auto">
      <header class="mb-12">
        <a href="/blog" class="inline-flex items-center px-4 py-2 bg-yellow-300 border-3 border-black font-bold uppercase text-sm tracking-wide bold-shadow-sm hover:bg-yellow-400 transition-colors mb-6">
          ‚Üê Back
        </a>

        <div class="bg-gradient-to-r from-orange-400 to-pink-500 border-4 border-black p-8 bold-shadow-lg -rotate-1 mb-8">
          <h1 class="text-4xl md:text-6xl font-bold text-white leading-tight uppercase">
            {post.data.title}
          </h1>
        </div>

        <div class="flex flex-wrap items-center gap-4 mb-6">
          <div class="bg-white border-3 border-black px-4 py-2 font-bold text-sm uppercase tracking-wide bold-shadow-sm">
            <time datetime={post.data.pubDate.toISOString()}>
              {post.data.pubDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>
          <div class="bg-black border-3 border-black px-4 py-2 text-white font-bold text-sm uppercase tracking-wide bold-shadow-sm">
            {post.data.author}
          </div>
        </div>

        {post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {post.data.tags.map((tag) => (
              <span class="px-3 py-2 bg-yellow-300 border-2 border-black font-bold text-sm uppercase tracking-wide">
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>

      <div class="bg-white border-4 border-black p-8 md:p-12 bold-shadow-lg">
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
      </div>
    </article>
  </main>
  <Footer />
</BaseLayout>

<style is:global>
  .prose {
    color: rgb(31 41 55);
    font-size: 1.125rem;
    line-height: 1.75rem;
  }

  .prose h2 {
    font-size: 2rem;
    font-weight: 700;
    color: rgb(17 24 39);
    margin-top: 3rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .prose h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: rgb(17 24 39);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .prose p {
    margin-bottom: 1.5rem;
    line-height: 1.75;
    font-weight: 500;
  }

  .prose a {
    color: rgb(249 115 22);
    text-decoration: underline;
    text-decoration-thickness: 3px;
    text-underline-offset: 3px;
    font-weight: 700;
  }

  .prose a:hover {
    color: rgb(234 88 12);
    background-color: rgb(254 243 199);
  }

  .prose ul,
  .prose ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .prose code {
    background-color: rgb(254 243 199);
    padding: 0.25rem 0.5rem;
    border: 2px solid rgb(0 0 0);
    font-size: 0.875rem;
    font-family: ui-monospace, monospace;
    color: rgb(17 24 39);
    font-weight: 700;
  }

  .prose pre {
    background-color: rgb(17 24 39);
    color: rgb(243 244 246);
    padding: 1.5rem;
    border: 4px solid rgb(0 0 0);
    overflow-x: auto;
    margin-bottom: 1.5rem;
    box-shadow: 6px 6px 0px 0px rgba(0, 0, 0, 1);
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
    border: none;
    color: inherit;
    font-weight: 400;
    box-shadow: none;
  }

  .prose blockquote {
    border-left: 6px solid rgb(0 0 0);
    background-color: rgb(254 243 199);
    padding: 1.5rem;
    font-style: italic;
    margin: 1.5rem 0;
    color: rgb(17 24 39);
    font-weight: 600;
    box-shadow: 4px 4px 0px 0px rgba(0, 0, 0, 1);
  }

  .prose strong {
    font-weight: 700;
    color: rgb(17 24 39);
  }
</style>
