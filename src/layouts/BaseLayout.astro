---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
import Nav from '../components/Nav.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Freddie Kealy',
  description = 'Full stack developer and builder based in the UK. Co-founder of Yotpoint, building tools and products across the web.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/bee-favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  <meta name="description" content={description} />
  <meta name="keywords" content="full stack developer, software engineer, builder, React, Next.js, Node.js, AWS, Tailwind CSS" />
  <meta name="theme-color" content="#3b82f6" />

  <!-- Open Graph / Social Media -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />

  <title>{title}</title>

  <!-- Cloudflare Web Analytics -->
  <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "35fae063ae114a9cb2bee51bb088071c"}'></script>
</head>
<body class="bg-white text-gray-900 antialiased">
  <ClientRouter />
  <Nav />
  <slot />

  <script>
    // Global transition logic for blog pages
    document.addEventListener('astro:before-preparation', (event) => {
      const from = event.from.pathname;
      const to = event.to.pathname;

      // If navigating FROM blog index, set appropriate old animation based on destination
      if (from === '/blog') {
        // If navigating to home, slide out right (home comes from left)
        if (to === '/' || to === '/#projects' || to === '/#experience') {
          document.documentElement.style.setProperty('--blog-old-animation', 'slideOutRightSheet 0.6s ease-in-out forwards');
        }
        // If navigating to a blog post, slide out left (post comes from right)
        else if (to.startsWith('/blog/') && to !== '/blog') {
          document.documentElement.style.setProperty('--blog-old-animation', 'slideOutLeftSheet 0.6s ease-in-out forwards');
        }
      }

      // If navigating TO blog index, set appropriate new animation based on source
      if (to === '/blog') {
        // If coming from home, slide in from right (home slides out left)
        if (from === '/' || from.startsWith('/#')) {
          document.documentElement.style.setProperty('--blog-slide-in', 'slideInFromRightSheet 0.6s ease-in-out forwards');
        }
        // If coming from blog post, slide in from left (post slides out right)
        else if (from.startsWith('/blog/') && from !== '/blog') {
          document.documentElement.style.setProperty('--blog-slide-in', 'slideInFromLeftSheet 0.6s ease-in-out forwards');
        }
      }
    });

    // Reset blog animations on page load
    document.addEventListener('astro:page-load', () => {
      document.documentElement.style.removeProperty('--blog-old-animation');
      document.documentElement.style.removeProperty('--blog-slide-in');
    });
  </script>
</body>
</html>
